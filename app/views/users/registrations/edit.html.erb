<h2>Alterar Usuário</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-horizontal', role: 'form' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label 'Nome', class: 'col-md-1 control-label no-padding-right' %>
      <div class="col-md-11">
        <%= f.text_field :name, type: 'text', class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: 'col-md-1 control-label no-padding-right' %>
      <div class="col-md-11">
        <%= f.email_field :email, type: 'text', class: 'form-control' %>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <div class="col-md-6">
        <%= f.label 'Senha', class: 'col-md-2 control-label no-padding-right' %>
        <div class="col-md-10">
          <span class="input-icon icon-right">
            <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
            <%= fa_icon 'info', 'data-toggle' => 'tooltip', 'data-placement' => 'top',
                      'data-original-title' => 'Deixe em branco se não desejar alterar' %>
          </span>
        </div>
      </div>

      <div class="col-md-6">
        <%= f.label 'Confirme a senha', class: 'col-md-2 control-label no-padding-right' %>
        <div class="col-md-10">
          <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label 'Senha atual', class: 'col-md-1 control-label no-padding-right' %>
      <div class="col-md-11">
          <span class="input-icon icon-right">
            <%= f.password_field :current_password, autocomplete: 'off', class: 'form-control' %>
            <%= fa_icon 'info', 'data-toggle' => 'tooltip', 'data-placement' => 'top',
                        'data-original-title' => 'Precisamos de sua senha atual para confirmar suas alterações' %>
          </span>
      </div>
    </div>

    <br>

    <div class="form-group" align="center">
      <button type="submit" class="btn btn-default">Confirmar</button>
    </div>
<% end %>
