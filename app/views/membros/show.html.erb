<div class="form-group">
  <%= label_tag :cadastro, nil, class: 'col-md-1 control-label no-padding-right' %>
  <div class="col-md-3">
    <%= text_field_tag :cadastro, @membro.numero_cadastro, class: 'form-control', disabled: 'disabled' %>
  </div>

  <%= label_tag :igreja, nil, class: 'col-md-1 control-label no-padding-right' %>
  <div class="col-md-3">
    <%= text_field_tag :igreja, @membro.nome_igreja  , class: 'form-control', disabled: 'disabled' %>
  </div>

  <%= label_tag :cargo, nil, class: 'col-md-1 control-label no-padding-right' %>
  <div class="col-md-3">
        <%= text_field_tag :cargo, @membro.cargo.descricao, class: 'form-control', disabled: 'disabled' %>
  </div>
</div>

<div class="form-title">
  Dados Pessoais
</div>

<div class="form-group">
  <%= label_tag :pessoa_nome, 'Nome', class: 'col-md-1 control-label no-padding-right' %>
  <div class="col-md-11">
    <%= text_field_tag :pessoa_nome, @membro.pessoa.nome, class: 'form-control', disabled: 'disabled' %>
  </div>
</div>

<div class="form-group">
  <%= label_tag :pessoa_data_nascimento, 'Data Nascimento', class: 'col-md-1 control-label no-padding-right' %>
  <div class="col-md-5">
    <%= text_field_tag :pessoa_data_nascimento, @membro.pessoa.data_nascimento, class: 'form-control', disabled: 'disabled' %>
  </div>

  <%= label_tag :pessoa_estado_civil, 'Estado Civil', class: 'col-md-1 control-label no-padding-right' %>
  <div class="col-md-5">
    <%= text_field_tag :pessoa_estado_civil, @membro.pessoa.estado_civil, class: 'form-control', disabled: 'disabled' %>
  </div>
</div>

<div class="form-group">
  <%= label_tag :pessoa_rg, 'RG', class: 'col-md-1 control-label no-padding-right' %>
  <div class="col-md-5">
    <%= text_field_tag :pessoa_rg, @membro.pessoa.rg, class: 'form-control', disabled: 'disabled' %>
  </div>

  <%= label_tag :pessoa_cpf, 'CPF', class: 'col-md-1 control-label no-padding-right' %>
  <div class="col-md-5">
    <%= text_field_tag :pessoa_cpf, @membro.pessoa.cpf, class: 'form-control', disabled: 'disabled' %>
  </div>

  <div class="databox-text darkgray" align="center">
    Título de Eleitor
  </div>

  <%= label_tag :pessoa_te_data_emissao, 'Data de Emissão', class: 'col-md-1 control-label no-padding-right' %>
  <div class="col-md-2">
    <%= text_field_tag :pessoa_te_data_emissao, (@membro.pessoa.titulo_eleitor_data_emissao.to_s(:br) unless @membro.pessoa.titulo_eleitor_data_emissao.nil?), class: 'form-control', disabled: 'disabled' %>
  </div>

  <%= label_tag :pessoa_te_numero_inscricao, 'Nº Inscrição', class: 'col-md-1 control-label no-padding-right' %>
  <div class="col-md-4">
    <%= text_field_tag :pessoa_te_numero_inscricao, @membro.pessoa.titulo_eleitor_numero_inscricao, class: 'form-control', disabled: 'disabled' %>
  </div>

  <%= label_tag :pessoa_te_zona, 'Zona', class: 'col-md-1 control-label no-padding-right' %>
  <div class="col-md-1">
    <%= text_field_tag :pessoa_te_zona, @membro.pessoa.titulo_eleitor_zona, class: 'form-control', disabled: 'disabled' %>
  </div>

  <%= label_tag :pessoa_te_secao, 'Seção', class: 'col-md-1 control-label no-padding-right' %>
  <div class="col-md-1">
    <%= text_field_tag :pessoa_te_secao, @membro.pessoa.titulo_eleitor_secao, class: 'form-control', disabled: 'disabled' %>
  </div>

</div>

<% @membro.pessoa.pessoa_enderecos.each do |pe| %>

    <% if !pe.endereco.bairro.nil? %>

    <div class="form-title">
      Endereço <%= pe.descricao %>
    </div>

    <div class="form-group">
      <%= label_tag :pessoa_endereco_logradouro, 'Logradouro', class: 'col-md-1 control-label no-padding-right' %>
      <div class="col-md-8">
        <%= text_field_tag :pessoa_endereco_logradouro, pe.endereco.logradouro, class: 'form-control', disabled: 'disabled' %>
      </div>


      <%= label_tag :pessoa_endereco_numero, 'Número', class: 'col-md-1 control-label no-padding-right' %>
      <div class="col-md-2">
        <%= text_field_tag :pessoa_endereco_numero, pe.endereco.numero, class: 'form-control', disabled: 'disabled' %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :pessoa_endereco_complemento, 'Complemento', class: 'col-md-1 control-label no-padding-right' %>
      <div class="col-md-11">
        <%= text_field_tag :pessoa_endereco_complemento, pe.endereco.complemento, class: 'form-control', disabled: 'disabled' %>
      </div>
    </div>

    <div class="form-group">

      <%= label_tag :pessoa_endereco_estado, 'Pais', class: 'col-md-1 control-label no-padding-right' %>
      <div class="col-md-5">
        <%= text_field_tag :pessoa_endereco_estado, pe.endereco.bairro.cidade.estado.pais.nome, class: 'form-control', disabled: 'disabled' %>
      </div>


      <%= label_tag :pessoa_endereco_estado, 'Estado', class: 'col-md-1 control-label no-padding-right' %>
      <div class="col-md-5">
        <%= text_field_tag :pessoa_endereco_estado, pe.endereco.bairro.cidade.estado.nome, class: 'form-control', disabled: 'disabled' %>
      </div>
    </div>

    <div class="form-group">

      <%= label_tag :pessoa_endereco_cidade, 'Cidade', class: 'col-md-1 control-label no-padding-right' %>
      <div class="col-md-5">
        <%= text_field_tag :pessoa_endereco_cidade, pe.endereco.bairro.cidade.nome, class: 'form-control', disabled: 'disabled' %>
      </div>

      <%= label_tag :pessoa_endereco_cidade, 'Bairro', class: 'col-md-1 control-label no-padding-right' %>
      <div class="col-md-5">
        <%= text_field_tag :pessoa_endereco_cidade, pe.endereco.bairro.nome, class: 'form-control', disabled: 'disabled' %>
      </div>
    </div>

    <div class="form-group">

      <%= label_tag :pessoa_endereco_cep, 'Cep', class: 'col-md-1 control-label no-padding-right' %>
      <div class="col-md-11">
        <%= text_field_tag :pessoa_endereco_cep, pe.endereco.cep, class: 'form-control', disabled: 'disabled' %>
      </div>

    </div>


    <div class="form-group">
      <%= label_tag :pessoa_endereco_ponto_referencia, 'Ponto de Referência', class: 'col-md-1 control-label no-padding-right' %>
      <div class="col-md-11">
        <%= text_field_tag :pessoa_endereco_ponto_referencia, pe.endereco.ponto_referencia, class: 'form-control', disabled: 'disabled' %>
      </div>
    </div>

    <% end %>

<% end %>

<div class="form-title">
  Contatos
</div>
<div class="form-group">
  <% @membro.pessoa.contatos.each do |ct| %>
      <%= label_tag :contato, ct.tipo.titleize, class: 'col-md-1 control-label no-padding-right' %>
      <div class="col-md-3">
        <%= text_field_tag :contato, ct.descricao, class: 'form-control', disabled: 'disabled' %>
      </div>
  <% end %>
</div>
<div class="text-center">
<%= link_to 'Listar', membros_path, class: 'btn btn-blue' %>
<%= link_to 'Editar', edit_membro_path(@membro), class: 'btn btn-blue' %>
</div>