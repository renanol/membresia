<%= bootstrap_form_tag url: '/filtrar' do |f| %>

    <div class="form-group">
      <div class="col-sm-12 text-right" style="padding-bottom: 5px">
        <%= link_to new_tipo_contribuicao_path, title: 'Novo', class: 'btn btn-success btn-circle btn-xs' do %>
            <%= fa_icon 'plus' %>
        <% end %>
      </div>
      <div class="col-sm-12">
        <table class="table table-hover table-bordered">
          <thead>
          <tr>
            <th>Descrição</th>
            <th width="20"></th>
            <th width="20"></th>
          </tr>
          </thead>
          <tbody>
          <% @tipo_contribuicoes.each do |tc| %>
              <tr>
                <td><%= tc.descricao %></td>
                <td>
                  <%= link_to tc, title: 'Visualizar', class: 'btn btn-default icon-only btn-xs' do %>
                      <%= fa_icon 'search' %>
                  <% end %>
                </td>
                <td>
                  <%= link_to edit_tipo_contribuicao_path(tc), title: 'Alterar', class: 'btn btn-default icon-only btn-xs' do %>
                      <%= fa_icon 'pencil' %>
                  <% end %>
                </td>
              </tr>
          <%end%>
          </tbody>
        </table>
      </div>
    </div>

<% end %>