<%= bootstrap_form_tag url: '/filtrar' do |f| %>

    <div class="form-group">
      <div class="col-sm-12 text-right" style="padding-bottom: 5px">
        <%= link_to new_igreja_path, title: 'Novo', class: 'btn btn-success btn-circle btn-xs' do %>
            <%= fa_icon 'plus' %>
        <% end %>
      </div>
      <div class="col-sm-12">
        <table class="table table-hover table-bordered">
          <thead>
          <tr>
            <th>Nome </th>
            <th>Endereco</th>
            <th width="20"></th>
            <th width="20"></th>

          </tr>
          </thead>

          <tbody>
          <% @igrejas.each do |igreja| %>
              <tr>
                <td><%= igreja.descricao %></td>
                <td>
                  <%  igreja.enderecos.each do |endereco| %>
                      <%= endereco %>
                  <% end %>
                </td>
                <td>
                  <%= link_to igreja, title: 'Visualizar', class: 'btn btn-default btn-xs icon-only' do %>
                      <%= fa_icon 'search' %>
                  <% end %>
                </td>
                <td>
                  <%= link_to edit_igreja_path(igreja), title: 'Editar', class: 'btn btn-default btn-xs icon-only' do %>
                      <%= fa_icon 'pencil' %>
                  <% end %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>

<% end %>