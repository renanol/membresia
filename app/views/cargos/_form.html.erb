<%= form_for @cargo, :html => {:class => "form-horizontal"} do |f| %>

    <%= render 'layouts/erros', object: @cargo %>

    <div class="form-group">
        <label class="col-lg-1 control-label">Descrição</label>
        <div class="col-lg-11">
            <%= f.text_field  :descricao, class: 'form-control', placeholder: 'Descrição'  %>
        </div>
    </div>

    <div class="form-group">
      <label class="col-lg-1 control-label">Liderança</label>
      <div class="col-lg-11">
        <div class="radio">
          <label>
            <%= f.radio_button :lideranca, true %>
            <span class="text">SIM</span>
          </label>
        </div>
        <div class="radio">
          <label>
            <%= f.radio_button :lideranca, false %>
            <span class="text">NAO</span>
          </label>
        </div>


      </div>
    </div>

    <%= link_to 'Listar', cargos_path, class: 'btn btn-blue' %>

    <%= f.submit class: 'btn btn-blue' %>

<% end %>
